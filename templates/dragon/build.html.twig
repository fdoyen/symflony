
<style>



	#finalitem {
	text-align: center;
	}
	#items {
		display: flex;
		justify-content: space-evenly;
		align-items:center;
	}
	.item > p {
	text-align: center;
	}
</style>

<div id="finalitem">
	<img src="{{finalItem.image}}" />
	<p>{{finalItem.price}}</p>
</div>


<div id="items">
{% for item in items %}
		<div class="item">
	    <img src="{{item.image}}" />
		<p>{{item.price}}</p>
    </div>
{% endfor %}
</div>
